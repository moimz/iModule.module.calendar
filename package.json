{
	"id":"com.moimz.imodule.module.calendar",
	"icon":"mi-calendar",
	"title":{
		"ko":"캘린더"
	},
	"version":"3.0.0",
	"description":{
		"ko":"일정을 관리하는 캘린더 및 스케쥴관련 기능을 수행한다."
	},
	"author":{
		"name":"Arzz",
		"email":"arzz@arzz.com"
	},
	"homepage":"http://www.imodule.kr",
	"dependencies":{
		"core":"3.0.0",
		"attachment":"3.0.0",
		"push":"3.0.0",
		"email":"3.0.0",
		"member":"3.0.0",
		"keyword":"3.0.0"
	},
	"language":"ko",
	"admin":true,
	"context":true,
	"global":false,
	"configs":{
		"templet":{
			"type":"templet",
			"default":"default"
		}
	},
	"databases":{
		"calendar_table":{
			"columns":{
				"cid":{
					"type":"varchar",
					"length":20,
					"comment":"캘린더아이디"
				},
				"title":{
					"type":"varchar",
					"length":100,
					"comment":"캘린더명"
				},
				"templet":{
					"type":"varchar",
					"length":30,
					"comment":"템플릿"
				},
				"templet_configs":{
					"type":"text",
					"is_null":true,
					"comment":"템플릿설정"
				},
				"use_category":{
					"type":"enum",
					"length":"'NONE','USED'",
					"default":"NONE",
					"comment":"카테고리사용여부"
				},
				"schedule":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"일정수"
				}
			},
			"indexes":{
				"cid":"primary_key"
			}
		},
		"calendar_category_table":{
			"columns":{
				"idx":{
					"type":"int",
					"length":11,
					"comment":"카테고리고유값"
				},
				"cid":{
					"type":"varchar",
					"length":20,
					"comment":"캘린더아이디"
				},
				"title":{
					"type":"varchar",
					"length":100,
					"comment":"카테고리명"
				},
				"color":{
					"type":"char",
					"length":7,
					"comment":"카테고리색상"
				},
				"sort":{
					"type":"int",
					"length":11
				}
			},
			"indexes":{
				"idx":"primary_key",
				"cid":"index"
			},
			"auto_increment":"idx"
		},
		"calendar_schedule_table":{
			"columns":{
				"idx":{
					"type":"int",
					"length":11,
					"comment":"일정고유값"
				},
				"cid":{
					"type":"varchar",
					"length":20,
					"comment":"캘린더아이디"
				},
				"category":{
					"type":"int",
					"length":11
				},
				"midx":{
					"type":"int",
					"length":11,
					"comment":"일정등록회원고유번호"
				},
				"title":{
					"type":"varchar",
					"length":100,
					"comment":"일정명"
				},
				"start_time":{
					"type":"int",
					"length":11,
					"comment":"일정시작시각"
				},
				"end_time":{
					"type":"int",
					"length":11,
					"comment":"일정종료시각"
				},
				"is_allday":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"TRUE",
					"comment":"하루종일여부"
				},
				"repeat":{
					"type":"enum",
					"length":"'NONE','DAILY','WEEKLY','MONTHLY','MONTHLY_END','ANNUALLY'",
					"default":"NONE",
					"comment":"반복여부"
				},
				"repeat_idx":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"반복최초일정고유번호"
				},
				"repeat_end_date":{
					"type":"int",
					"length":11,
					"comment":"반복종료일"
				}
			},
			"indexes":{
				"idx":"primary_key",
				"cid":"index",
				"midx":"index",
				"repeat_idx":"index",
				"start_time,end_time,cid":"index"
			},
			"auto_increment":"idx"
		}
	}
}